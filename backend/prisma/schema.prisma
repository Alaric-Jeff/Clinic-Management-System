generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  encoder
}

enum Service_Categories {
  Hematology
  Bacteriology
  ClinicalMicroscopy
  TwentyFourHourUrineTest
  SerologyAndImmunology
  ClinicalChemistry
  Electrolytes
  Vaccine
  Hispatology
  ToBeReadByPathologist
  TumorMarkers
  ThyroidFunctionTest
  Hormones
  Hepatitis
  Enzymes
  Others
}

model Accounts_Table {
  account_id  String   @id @default(uuid())
  first_name  String
  last_name   String
  middle_name String?  @default("N/A")
  email       String   @unique
  password    String
  role        Role     @default(encoder)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Patients_Table {
  patient_id           String   @id @default(uuid())
  first_name           String
  last_name            String
  middle_name          String?  @default("N/A")
  birth_date           DateTime
  csd_id_or_pwd_id     String?
  mobile_number        String?
  residentual_address  String?
  is_archived          Boolean  @default(false)
  created_by           String
  last_updated_by      String
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

}

model Services_Table {
  services_id      String             @id @default(uuid())
  service_name     String
  service_category Service_Categories
  service_price    Float
  is_activated     Boolean            @default(true)
  is_available     Boolean            @default(true)
  created_at       DateTime           @default(now())
  last_updated_by  String
}